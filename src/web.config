<configuration>
    <system.webServer>
        <security>
            <requestFiltering>
                <requestLimits maxAllowedContentLength="500000000"  />
            </requestFiltering>
        </security>

        <httpProtocol>
            <customHeaders>
                <!-- If not on Azure, you can safely remove this header -->
                <add name="ARR-Disable-Session-Affinity" value="true"/>
                <add name="X-Content-Type-Options" value="nosniff"/>
            </customHeaders>
        </httpProtocol>
    </system.webServer>
</configuration>